        <table cellpadding="0" cellspacing="0" border="0" id="tableSorter_{$PAGE}" class="tablesorter list zebra">
            <thead>
                <tr class="head">{literal}
                    <th class="{sorter: false}">&nbsp;</th>
                    {/literal}
                    <th>Keywords</th>
                    <th><span onmouseover="tooltip.show('Data retrieved from the data provider Sitti ads per day based on the current page');" onmouseout="tooltip.hide();">Estimated Impressions</span></th>
                    {if not $ppa}<th>Average Price CPC</th>{/if}
                    <th><span onmouseover="tooltip.show('Data taken by an advertiser who has purchased these keywords');" onmouseout="tooltip.hide();">Popularity</span></th>
                </tr>
            </thead>
            <tbody>
      {section name=i loop=$list}
      {if $list[i].jum_imp > 0 or $list[i].is_main eq '1'}
      <tr>
        <td><input name="keywords_{$list[i].index|stripslashes}" type="hidden" id="keywords_{$list[i].index|stripslashes}" value="{$list[i].keyword|stripslashes}"/><input name="keywords[]" type="checkbox" id="keywords[]" value="{$list[i].keyword|stripslashes}" {if $list[i].is_main eq '1'}checked{/if}/></td>
        <td><label>{$list[i].keyword|stripslashes}</label></div></td>
        <td> {if $list[i].jum_imp >0}{$list[i].jum_imp}{else}-{/if}</td>
       
        {if not $ppa}<td>{if $list[i].avg_cpc >0} {$list[i].avg_cpc}{else}-{/if} </td>{/if}
        
        <td><span style="display:none;">{$list[i].popularity}</span><img src="images/load.gif" width="{$list[i].popularity}" height="14"/> </td>
      </tr>
      {/if}
      {sectionelse}
        <tr>
        <td colspan="7"><div class="notFound">Related words not found</div></td>
      </tr>
        {/section}
            </tbody>
        </table>
        <script>
        $(document).ready(function() 
		{literal}
    	{ 
		{/literal}
		
        	$("#tableSorter_{$PAGE}").tablesorter(); 
    	{literal}
		}
		{/literal} 
		); 
		</script>


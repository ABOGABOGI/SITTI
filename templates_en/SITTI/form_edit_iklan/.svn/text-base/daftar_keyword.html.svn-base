<table width="650" border="0" cellspacing="0" cellpadding="0" class="list zebra" >
                  <tr class="head">
                    <td width="20">No.</td>
                    <td>Keywords</td>
                    <td>High Bid CPC</td>
                    <td>Your Bid</td>
                    <td>Budget/Days</td>
                    <td>Budget Total</td>
                 
                  </tr>
                  {section name=i loop=$list}
                  {if $list[i].keyword}
                  <tr>
                    <td>{$smarty.section.i.iteration}</td>
                    <td>{$list[i].keyword|trim|stripslashes|strip_tags}</td>
                    <td>{$list[i].max_cpc|number_format}</td>
                    <td><input name="keyword[]" type="hidden" value="{$list[i].keyword|stripslashes|strip_tags|mysql_escape_string}"/>
                      <input name="bid[]" type="text" value="{$list[i].bid|round}"  class="inputPoint" style="width:100px;text-align:right;"/></td>
                    <td><input name="budget[]" type="text" value="{$list[i].budget|round}" class="inputPoint" style="width:100px;text-align:right;" /></td>
                    <td><input name="total[]" type="text" value="{$list[i].total|round}" class="inputPoint" style="width:100px;text-align:right;"/></td>
                   
                  </tr>
                  {/if}
                    {/section}
                </table>
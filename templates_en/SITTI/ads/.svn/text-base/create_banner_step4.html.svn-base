<script type="text/javascript">

$(function() {
  
  $('input#disclaimer').click(function () {
    if ($(this).is(':checked')) {
      $('input#konfirmasiaktifkan').removeAttr('disabled');
    } else {
      $('input#konfirmasiaktifkan').attr('disabled', true);
    }
  });

});

</script>

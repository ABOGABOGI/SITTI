    function filter_restricted_words(statement, filter) {
        var found = false;
        for (var i = 0; i < filter.length; i++) {
            var pattern = new RegExp("\\b"+filter[i]+"\\b", 'g');
            if (pattern.test($.trim(statement.toLowerCase()))) {
                found = true;
                break;
            }
        }
        return found;
    }


	 function modulus(mod){
		var modulus = mod%50;
			var bidUtuh = mod-modulus;
			var rround;
			if (modulus >= 25){
				rround = 50;
			}else{
				rround = 0;
			}
			mod = bidUtuh + rround;
			return mod;
	}
    function isNumberKey(evt)
    {
       var charCode = (evt.which) ? evt.which : event.keyCode
       if (charCode > 31 && (charCode < 48 || charCode > 57) && (charCode < 96 || charCode > 105))
          return false;

       return true;
    }
